    "cleanupinterval" : {
      "default" : 1000,
      "type" : "int",
      "unit" : "milliseconds",
      "requiresRestart" : true
    },
    "freshthreshold" : {
      "default" : 1000,
      "type" : "int",
      "unit" : "milliseconds"
    }
  },
  "log" : {
    "maxfilesize":{
      "info" : "Max log file size",
      "default" : 500,
      "type" : "int",
      "unit" : "Mb"
    },
    "hstatloglocation":{
      "info" : "Location(s) of the log files.",
      "type" : "string",
      "default" : "./var/log/hybrixd.log"
    }
  }
